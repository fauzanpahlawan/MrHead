<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/buttonBeardNone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/beard"
            app:srcCompat="@drawable/allnone" />

        <ImageView
            android:id="@+id/buttonBeardMoustacheHeavy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/beard"
            app:srcCompat="@drawable/buttonbeardmoustacheheavy" />

        <ImageView
            android:id="@+id/buttonBeardMoustacheNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/beard"
            app:srcCompat="@drawable/buttonbeardmoustachenormal" />

        <ImageView
            android:id="@+id/buttonBeardShaved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/beard"
            app:srcCompat="@drawable/buttonbeardshaved" />

        <ImageView
            android:id="@+id/buttonBeardSingleHair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/beard"
            app:srcCompat="@drawable/buttonbeardsinglehair" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>